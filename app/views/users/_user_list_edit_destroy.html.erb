<div class="form-actions">
  <%= link_to(users_path, class: 'button radius') do %>
    <i class="fa fa-list"></i>
    &nbsp;Display All Users
  <% end %>
  &nbsp;&nbsp;
  <%= link_to(edit_user_path(@user), class: 'button radius') do %>
    <i class="fa fa-pencil"></i>
    &nbsp;<%= "Edit #{@user.name}" %>
  <% end %>
  &nbsp;&nbsp;
  <%= link_to(user_path(@user), method: 'delete', data: {confirm: "Are you sure you want to permanently delete #{@user.name}"}, class: 'button radius alert') do %>
    <i class="fa fa-trash-o"></i>
    &nbsp;<%= "Delete #{@user.name}" %>
  <% end %>
</div>